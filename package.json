{
  "name": "flink-compute-service",
  "version": "0.3.0",
  "description": "Run Flink application on AWS EC2.",
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf --glob tsconfig.tsbuildinfo dist *.tgz",
    "start": "node --enable-source-maps bin/cli",
    "lint": "eslint . --format stylish --ext .ts",
    "test": "jest"
  },
  "bin": "bin/cli.js",
  "main": "dist/index.js",
  "sideEffects": false,
  "homepage": "https://github.com/akornatskyy/flink-compute-service",
  "bugs": {
    "url": "https://github.com/akornatskyy/flink-compute-service/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/flink-compute-service.git"
  },
  "keywords": [
    "flink",
    "service",
    "aws-ec2"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./lambda": "./dist/lambda.js"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.879.0",
    "check-compiler": "^1.4.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/__tests__",
      "!**/dist"
    ],
    "modulePathIgnorePatterns": [
      "dist",
      "tsconfig.*"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "no-null"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
